# ===============================================
# ARCHIVO .env.example - Variables de entorno
# ===============================================
# Copiar este archivo como .env en la raíz del proyecto
# y cambiar los valores para desplegar servicios de forma segura

# ===============================================
# CONFIGURACIÓN DE MYSQL
# ===============================================
MYSQL_ROOT_PASSWORD=root_password_123
MYSQL_DATABASE=linktic_inventory_db
MYSQL_USER=linktic_user
MYSQL_PASSWORD=linktic_password

# ===============================================
# CONFIGURACIÓN PRODUCT SERVICE (Puerto 8080)
# ===============================================
SPRING_PROFILES_ACTIVE=test
SPRING_DATASOURCE_URL=jdbc:mysql://mysql-microservices:3306/linktic_inventory_db
SPRING_DATASOURCE_USERNAME=linktic_user
SPRING_DATASOURCE_PASSWORD=linktic_password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect
JWT_SECRET_KEY=mySecretKey123ProductServiceminimo36caracteres.
SERVER_PORT=8080
LOGGING_LEVEL=INFO

